// Replace edit form with navigation bar
$("form#otwtranslation_assignment").replaceWith(
  "<%= escape_javascript(render("navigation", 
                         :assignment => @assignment, :on_show => true)) %>")

// Replace soure and description
<% source = @assignment.source.nil? ? "" : @assignment.source.controller_action %>
$("dl#otwtranslation_assignment dd.source").html("<%= escape_javascript(source) %>")

$("dl#otwtranslation_assignment dd.description").html(
  "<%= escape_javascript(raw sanitize_field(@assignment, :description)) %>")
