<h6 class="landmark heading">Translator Actions</h6>
<ul class="translation navigation actions" role="navigation">
  <%# can't use button_to here because we need the param :commit for voting %>
  <li>
    <%= form_for(translation,
                 :url => otwtranslation_vote_translation_path(translation),
                 :html => {:method => :put},
                 :remote => true ) do |f| %>
     <%= f.submit 'Vote up' %>
    <% end %>
  </li>
  <li>
    <%= form_for(translation,
                 :url => otwtranslation_vote_translation_path(translation),
                 :html => {:method => :put},
                 :remote => true ) do |f| %>
     <%= f.submit 'Vote down' %>
    <% end %>
  </li>

  <% if translation.approved %>
    <li>
      <%= button_to("Disapprove", otwtranslation_confirm_disapprove_translation_path(translation),
                   :remote => true, :method => :get) %>
    </li>
  <% else %>
    <li>
      <%= button_to("Approve", otwtranslation_approve_translation_path(translation),
                   :remote => true, :method => :post) %>
    </li>
    <li>
      <%= button_to("Edit", otwtranslation_edit_translation_path(translation),
                   :remote => true, :method => :get) %>
    </li>
    <li>
      <%= button_to("Delete", otwtranslation_confirm_destroy_translation_path(translation),
                   :remote => true, :method => :get) %>
    </li>
  <% end %>    
</ul>
