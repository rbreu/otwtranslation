//for both approving and disapproving

$j("li#translation<%= @translation.id %>").html(
    "<%= escape_javascript(render("otwtranslation/translations/blurb", 
                                  :translation => @translation)) %>")

$j("span#otwtranslation_phrase_<%= @translation.phrase_key %>").replaceWith(
  '<%= escape_javascript(otwtranslation_decorated_translation(@translation.phrase_key)) %>')

$j("span#otwtranslation_phrase_<%= @translation.phrase_key %>").rightClick(function(event) {
      otwtranslation_inline_translator(this)
  });

<% unless flash[:error].blank? %>
  $j("#main").prepend("<div class=\"flash error\"><%= escape_javascript(flash.delete(:error)) %></div>")
<% end %>
