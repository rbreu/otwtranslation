if ( confirm("Are you sure you want disapprove this translation?") ) {
   var $form = $('<%= form_for(@translation_id, :url => otwtranslation_disapprove_translation_path(@translation_id), :html => { :method => :post }, :remote => true ) do |f| %> <%= f.submit 'Disapprove' %> <% end %>')
   $form.appendTo('body')
