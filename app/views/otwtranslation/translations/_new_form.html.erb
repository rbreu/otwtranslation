<%= form_for(translation, :url => otwtranslation_post_translation_path,
                          :remote => true) do |f| %>
  <dl>
    <dt><%= f.label(:label, "Translation:")%></dt>
    <dd><%= f.text_area :label, :rows => 5 %></dd>

  </dl>
  <ul class="navigation actions">
    <li><%= f.submit "Add translation" %></li>
    <% if Otwtranslation::ContextRule.rule_combinations(
           translation.phrase.label, otwtranslation_language).length > 1 %>
      <li><%= f.submit "Create context-aware translations" %></li>
    <% end %>
  </ul>
<% end %>

