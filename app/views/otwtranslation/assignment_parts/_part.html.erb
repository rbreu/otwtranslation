<li id="assignment_part_<%=part.id %>" class="assignment_part <%= part.position%2 == 0 ? "even" : "odd" %>">
  <div class="assignment_part">
    <p class="assignee"><%= part.position %>. <%= part.assignee.login %></p>
    <p class="notes"><%= raw sanitize_field(part, :notes) %></p>
    <dl class="stats">
      <dt class="status">Status:</dt>
      <dd class="status"><%= part.status.to_s %></dt>
    </dl>

    <% unless assignment.activated %>
    <h3 class="landmark">Assignment Part Actions</h3>
    <ul class="assignment_part navigation">
      <li>
        <%= form_for(part, 
                     :url => otwtranslation_move_up_assignment_part_path(part),
                     :html => {:method => :get} ) do |f| %>
          <%= f.submit 'Move up' %>
        <% end %>
      </li>
      <li>
        <%= form_for(part, 
                     :url => otwtranslation_move_down_assignment_part_path(part),
                     :html => {:method => :get} ) do |f| %>
          <%= f.submit 'Move down' %>
        <% end %>
      </li>
      <li>
        <%= form_for(part, 
                     :url => otwtranslation_confirm_destroy_assignment_part_path(part),
                     :html => {:method => :get},
	             :remote => true ) do |f| %>
          <%= f.submit 'Delete' %>
        <% end %>
      </li>
    </ul>
    <% end %>
  </div>
</li>
