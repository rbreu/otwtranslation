<h6 class="landmark heading">Rule Actions</h6>
<ul class="navigation actions" role="navigation">
  <li>
    <%= form_for(rule, 
                 :url => otwtranslation_edit_rule_path(rule),
                 :html => {:method => :get}) do |f| %>
      <%= f.submit 'Edit' %>
    <% end %>
  </li>

  <li>
    <%= form_for(rule, 
                 :url => otwtranslation_move_up_rule_path(rule),
                 :html => {:method => :get}) do |f| %>
      <%= f.submit 'Move up' %>
    <% end %>
  </li>

  <li>
    <%= form_for(rule, 
                 :url => otwtranslation_move_down_rule_path(rule),
                 :html => {:method => :get}) do |f| %>
      <%= f.submit 'Move down' %>
    <% end %>
  </li>

  <li>
    <%= form_for(rule,
                 :url => otwtranslation_confirm_destroy_rule_path(rule), 
                 :html => { :method => :get },
                 :remote => true ) do |f| %>
      <%= f.submit 'Delete' %>
    <% end %>
  </li>
</ul>


